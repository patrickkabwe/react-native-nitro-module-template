    "release-it": {
        "npm": {
            "publish": false
        },
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}",
            "requireCleanWorkingDir": false
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/bumper": {
                "out": [
                    {
                        "file": "react-native-nitro-module-template/package.json",
                        "path": "version"
                    }
                ]
            },
            "@release-it/conventional-changelog": {
                "preset": {
                    "name": "conventionalcommits",
                    "types": [
                        {
